    <!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  Smart Home</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" />



</head>
<body>

    <div class="nbar">
        <ul>
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Log" ? "active" : "")" asp-area="" asp-controller="Log" asp-action="Index">Logs</a></li>
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Gas" ? "active" : "")" asp-area="" asp-controller="Gas" asp-action="Index">Gas</a></li>
            <li style="border-right: 1px solid #fff"><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active" : "")" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a></li>
            <li style="float:right; border-right: 1px solid #fff"><a asp-area="" asp-controller="Login" asp-action="LogOut">Logout</a></li>
            <li style="float:right; border-right:  none"><a asp-area="" asp-controller="Login" asp-action="Registration">New User</a></li>
        </ul>
    </div>
    <div class="mobilbar" >
        <div class="menu-button"id="mobil-button">
            <i class="fas fa-bars"></i>
        </div>
        <ul id="mobil-nav" style="display:none;">
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Log" ? "active" : "")" asp-area="" asp-controller="Log" asp-action="Index">Logs</a></li>
            <li><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Gas" ? "active" : "")" asp-area="" asp-controller="Gas" asp-action="Index">Gas</a></li>
            <li ><a class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Settings" ? "active" : "")" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a></li>
            <li ><a asp-area="" asp-controller="Login" asp-action="LogOut">Logout</a></li>
            <li ><a asp-area="" asp-controller="Login" asp-action="Registration">New User</a></li>
        </ul>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 -  Smart Home</p>
        </footer>
    </div>



    @RenderSection("Scripts", required: false)
</body>
</html>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/js/signalr.js"></script>
<script src="~/js/chart.js"></script>
<script src="~/js/effects.js"></script>
<script src="~/js/site.js"></script>